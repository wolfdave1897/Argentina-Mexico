    <script>
        async function getData() {
            const mexicoTime = await fetch("https://worldtimeapi.org/api/timezone/America/Mexico_City").then(res => res.json());
            const chacoTime = await fetch("https://worldtimeapi.org/api/timezone/America/Argentina/Cordoba").then(res => res.json());
            const mexicoWeather = await fetch("https://api.open-meteo.com/v1/forecast?latitude=19.43&longitude=-99.13&current_weather=true").then(res => res.json());
            const chacoWeather = await fetch("https://api.open-meteo.com/v1/forecast?latitude=-27.46&longitude=-58.98&current_weather=true").then(res => res.json());

            document.getElementById("mexico").innerHTML = `
                <h2>Ciudad de MÃ©xico ðŸ‡²ðŸ‡½</h2>
                <p><strong>Hora:</strong> ${new Date(mexicoTime.datetime).toLocaleTimeString()}</p>
                <p><strong>Temperatura:</strong> ${mexicoWeather.current_weather.temperature}Â°C</p>
            `;

            document.getElementById("argentina").innerHTML = `
                <h2>Resistencia, Chaco ðŸ‡¦ðŸ‡·</h2>
                <p><strong>Hora:</strong> ${new Date(chacoTime.datetime).toLocaleTimeString()}</p>
                <p><strong>Temperatura:</strong> ${chacoWeather.current_weather.temperature}Â°C</p>
            `;
        }
    </script>
</head>
<body onload="getData()">
